<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:controller="com.example.demo.LoginController"
           styleClass="login-root-pane" stylesheets="@Global.css, @Login.css"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <VBox alignment="CENTER" spacing="16.0" styleClass="form-pane"
              maxWidth="400" StackPane.alignment="CENTER_RIGHT">
            <children>
                <Label styleClass="welcome-title" text="Welcome Back to LumenLeg" />
                <VBox spacing="6.0">
                    <children>
                        <Label styleClass="form-label" text="Email" />
                        <TextField fx:id="emailField" promptText="Enter your email" />
                    </children>
                </VBox>
                <VBox spacing="6.0">
                    <children>
                        <Label styleClass="form-label" text="Password" />
                        <PasswordField fx:id="passwordField" promptText="Enter your password" />
                    </children>
                </VBox>
                <Hyperlink onAction="#handleForgotPassword" text="Forgot Password?" />
                <Button fx:id="loginButton" maxWidth="Infinity" onAction="#handleLogin" styleClass="login-button" text="Login" />
                <HBox spacing="6.0">
                    <children>
                        <Label text="Don't have an account?" />
                        <Hyperlink onAction="#handleRegister" text="Register" />
                    </children>
                </HBox>
                <Region VBox.vgrow="ALWAYS" />
                <Label styleClass="copyright-text" text="Â© 2025 LumenLeg. All rights reserved." />
            </children>
            <padding>
                <Insets top="40.0" bottom="40.0" left="30.0" right="30.0"/>
            </padding>
            <StackPane.margin>
                <Insets right="60.0" /> </StackPane.margin>
        </VBox>
    </children>
</StackPane>