<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Menautkan ke file CSS yang diperbarui -->
<BorderPane styleClass="root" stylesheets="@AdminAddPatient.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.AdminCont.AdminAddPatientController">
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header">
            <children>
                <Label styleClass="logo-text" text="LumenLeg - Admin Panel" />
            </children>
        </HBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0" styleClass="page-container">
            <children>
                <Label styleClass="page-title" text="Add New Patient" />

                <!-- GridPane diperbarui dengan field tambahan -->
                <GridPane styleClass="form-grid" hgap="25.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                    </columnConstraints>

                    <children>
                        <!-- Baris 1: Full Name & Email -->
                        <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label styleClass="form-label" text="Full Name *" />
                            <TextField fx:id="fullNameField" promptText="Enter patient's full name" />
                        </VBox>
                        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label styleClass="form-label" text="User Email *" />
                            <TextField fx:id="emailField" promptText="Enter patient's email" />
                        </VBox>

                        <!-- Baris 2: Age & Gender -->
                        <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label styleClass="form-label" text="Age *" />
                            <TextField fx:id="ageField" promptText="Enter patient's age" />
                        </VBox>
                        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Label styleClass="form-label" text="Gender *" />
                            <ComboBox fx:id="genderComboBox" maxWidth="Infinity" promptText="Select Gender" />
                        </VBox>

                        <!-- Baris 3: Phone & Emergency Contact -->
                        <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <Label styleClass="form-label" text="Phone Number" />
                            <TextField fx:id="phoneField" promptText="Enter phone number" />
                        </VBox>
                        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <Label styleClass="form-label" text="Emergency Contact" />
                            <TextField fx:id="emergencyContactField" promptText="Enter emergency contact" />
                        </VBox>

                        <!-- Baris 4: Medical History -->
                        <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                            <Label styleClass="form-label" text="Medical History" />
                            <TextArea fx:id="medicalHistoryArea" prefHeight="100.0" promptText="Enter relevant medical history..." wrapText="true" />
                        </VBox>
                    </children>
                </GridPane>

                <HBox alignment="CENTER" spacing="20.0" styleClass="action-button-bar">
                    <children>
                        <Button onAction="#handleSavePatient" text="Save Patient" styleClass="primary-button" />
                        <Button onAction="#handleCancel" text="Cancel" styleClass="secondary-button" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
