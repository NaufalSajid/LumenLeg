<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<!--
  Struktur diubah menjadi StackPane agar bisa menampung gambar latar
  dan form pendaftaran di atasnya, sama seperti halaman Login.
-->
<StackPane fx:controller="com.example.demo.SignUpController"
           styleClass="signup-root-pane" stylesheets="@SignUp.css"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <!-- Form container yang diletakkan di sebelah kanan -->
        <VBox alignment="CENTER" spacing="15.0" styleClass="form-pane"
              maxWidth="400" StackPane.alignment="CENTER_RIGHT">
            <children>
                <Label styleClass="title" text="Create Your Account" />
                <Text styleClass="subtitle" text="Join LumenLeg to start your recovery journey." />

                <VBox spacing="10.0" styleClass="form-container">
                    <children>
                        <VBox spacing="5.0">
                            <Label styleClass="form-label" text="Full Name" />
                            <TextField fx:id="fullNameField" promptText="Enter your full name" />
                        </VBox>
                        <VBox spacing="5.0">
                            <Label styleClass="form-label" text="Email Address" />
                            <TextField fx:id="emailField" promptText="Enter your email" />
                        </VBox>
                        <VBox spacing="5.0">
                            <Label styleClass="form-label" text="Password" />
                            <PasswordField fx:id="passwordField" promptText="Create a password" />
                        </VBox>
                        <VBox spacing="5.0">
                            <Label styleClass="form-label" text="Confirm Password" />
                            <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" />
                        </VBox>
                    </children>
                </VBox>

                <Button fx:id="signUpButton" maxWidth="Infinity" onAction="#handleSignUp" styleClass="signup-button" text="Sign Up" />

                <HBox alignment="CENTER" spacing="5.0">
                    <Text styleClass="footer-text" text="Already have an account?" />
                    <Button onAction="#handleBackToLogin" styleClass="login-link" text="Log In" />
                </HBox>
            </children>
            <padding>
                <Insets top="30.0" bottom="30.0" left="30.0" right="30.0"/>
            </padding>
            <StackPane.margin>
                <Insets right="60.0" />
            </StackPane.margin>
        </VBox>
    </children>
</StackPane>
