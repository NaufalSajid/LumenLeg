<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root" stylesheets="@Global.css, @PatientRecords.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.AdminCont.PatientRecordsController">
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header">
            <children>
                <Label styleClass="logo-text" text="LumenLeg" />
            </children>
        </HBox>
    </top>
    <center>
        <VBox styleClass="page-container" alignment="CENTER">
            <children>
                <Label styleClass="page-title" text="Patient Records" />
                <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="action-bar">
                    <children>
                        <TextField fx:id="searchField" promptText="Search patients..." HBox.hgrow="ALWAYS" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="addPatientButton" mnemonicParsing="false" onAction="#handleAddPatient" styleClass="add-patient-button" text="+ Add New Patient" />
                    </children>
                </HBox>
                <TableView fx:id="patientsTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" styleClass="records-table">
                    <columns>
                        <!-- Kolom yang sudah ada dan yang baru ditambahkan -->
                        <TableColumn fx:id="patientNameColumn" prefWidth="180.0" text="Patient Name" />
                        <TableColumn fx:id="ageColumn" prefWidth="70.0" text="Age" />
                        <TableColumn fx:id="genderColumn" prefWidth="100.0" text="Gender" />
                        <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
                        <TableColumn fx:id="phoneColumn" prefWidth="150.0" text="Phone Number" />
                        <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Rehab Status" />
                        <TableColumn fx:id="actionsColumn" prefWidth="150.0" text="Actions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="83.0" prefWidth="934.0" styleClass="footer">
            <children>
                <Button mnemonicParsing="false" onAction="#handleBackToDashboard" styleClass="logout-button-bottom" text="Back to Admin Dashboard" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
