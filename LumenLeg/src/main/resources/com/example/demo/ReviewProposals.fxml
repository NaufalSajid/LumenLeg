<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>

<BorderPane styleClass="root" stylesheets="@Global.css, @ReviewProposals.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.AdminCont.ReviewProposalsController">
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header">
            <children>
                <Label styleClass="logo-text" text="LumenLeg" />
            </children>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <VBox alignment="TOP_CENTER" spacing="10.0" styleClass="page-container">
                    <children>
                        <Label styleClass="page-title" text="Patient Rehabilitation Proposals" />
                        <Label styleClass="page-subtitle" text="Review and manage patient rehabilitation proposals." />
                        <TableView fx:id="proposalTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" styleClass="proposal-table" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="patientNameColumn" prefWidth="250.0" text="Patient Name" />
                                <TableColumn fx:id="startDateColumn" prefWidth="200.0" text="Proposed Start Date" />
                                <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status" />
                            </columns>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                        <VBox styleClass="details-section">
                            <children>
                                <Label styleClass="section-title" text="Selected Proposal Details" />
                                <VBox spacing="15.0" styleClass="details-form">
                                    <children>
                                        <VBox spacing="5.0">
                                            <children>
                                                <Label styleClass="form-label" text="Patient's Goals &amp; Notes" />
                                                <TextArea fx:id="goalsTextArea" editable="false" prefHeight="120.0" wrapText="true" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0">
                                            <children>
                                                <Label styleClass="form-label" text="Proposed Intensity" />
                                                <TextField fx:id="intensityField" editable="false" />
                                            </children>
                                        </VBox>
                                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#handleApprove" styleClass="approve-button" text="Approve" />
                                                <Button mnemonicParsing="false" onAction="#handleReject" styleClass="reject-button" text="Reject" />
                                            </children>
                                            <VBox.margin>
                                                <Insets top="10.0" />
                                            </VBox.margin>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" styleClass="footer">
            <children>
                <Button mnemonicParsing="false" onAction="#handleBackToDashboard" styleClass="logout-button-bottom" text="Back to Admin Dashboard" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
