<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="page-background" stylesheets="@Global.css, @ExerciseHistory.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.PatientCont.ExerciseHistoryController">

    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header">
            <Label styleClass="logo-text" text="LumenLeg" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="10.0">
                <Button onAction="#handleGoToPlan" styleClass="nav-button" text="Plan" />
                <Button styleClass="nav-button-active" text="History" />
            </HBox>
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <center>
        <VBox spacing="25.0" styleClass="page-container">
            <children>
                <Label styleClass="page-title" text="Exercise History" />
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="historyListVBox" spacing="10" />
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
   <bottom>
          <Button onAction="#handleGoToDashboard" styleClass="button-primary" text="Back to Dashboard" BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
