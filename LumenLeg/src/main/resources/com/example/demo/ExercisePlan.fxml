<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo.PatientCont.ExercisePlanController"
            prefWidth="1280.0" prefHeight="800.0"
            styleClass="page-background"
            stylesheets="@Global.css, @ExercisePlan.css">

    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header">
            <padding><Insets top="15" bottom="15" left="40" right="40"/></padding>
            <Label styleClass="logo-text" text="LumenLeg"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER" spacing="20.0">
                <Button onAction="#handleGoToDashboard" styleClass="header-button-active" text="Dashboard"/>
                <Button onAction="#handleGoToHistory" styleClass="header-button" text="History"/>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Button onAction="#handleLogout" styleClass="logout-button" text="Logout"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="25.0" styleClass="page-container">
            <padding><Insets left="50" right="50" top="30" bottom="30"/></padding>
            <children>
                <Label text="Today's Plan" styleClass="page-title"/>

                <VBox spacing="8" styleClass="progress-card">
                    <children>
                        <HBox alignment="CENTER_LEFT">
                            <Label text="Daily Progress" styleClass="section-title"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="progressLabel" styleClass="progress-percentage-label" text="0%"/>
                        </HBox>
                        <ProgressBar fx:id="dailyProgressBar" prefWidth="Infinity" prefHeight="12"/>
                    </children>
                </VBox>

                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                    <content>
                        <VBox fx:id="exerciseListVBox" spacing="20" />
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>