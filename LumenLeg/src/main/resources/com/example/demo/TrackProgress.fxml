<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane style="-fx-background-color: var(--primary-bg-color);" stylesheets="@Global.css, @TrackProgress.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.PatientCont.TrackProgressController">
    <children>
        <VBox fx:id="mainContainer" alignment="TOP_CENTER" prefHeight="1080.0" prefWidth="1920.0" spacing="24.0" styleClass="main-container">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label style="-fx-font-weight: bold; -fx-font-size: 18px;" text="LumenLeg" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
            <VBox spacing="4.0">
                <Label styleClass="page-title" text="Tracking Progress" />
                <Label fx:id="dateLabel" styleClass="page-subtitle" text="Sunday, July 20, 2025" />
            </VBox>
            <Separator />
            <VBox spacing="16.0">
                <children>
                    <Label style="-fx-font-weight: bold;" text="Progress Overview" />
                    <HBox spacing="20.0" alignment="TOP_LEFT">
                        <ProgressIndicator fx:id="progressIndicator" prefHeight="229.0" prefWidth="258.0" progress="0.62" />
                        <VBox spacing="8.0" styleClass="overview-card" HBox.hgrow="ALWAYS">
                            <Label styleClass="card-title" text="Sessions Completed" />
                            <Label fx:id="sessionsCompletedLabel" styleClass="card-value" text="2/3" />
                        </VBox>
                        <VBox spacing="8.0" styleClass="overview-card" HBox.hgrow="ALWAYS">
                            <Label styleClass="card-title" text="Today's Mood" />
                            <Label styleClass="card-title" text="Pain Level" />
                            <Label fx:id="painLevelLabel" styleClass="card-value" text="4/10" />
                        </VBox>
                    </HBox>
                </children>
            </VBox>
            <VBox spacing="8.0">
                <Label style="-fx-font-weight: bold;" text="Scheduled Activities (Today)" />
                <VBox fx:id="activitiesContainer" />
            </VBox>
            <Region VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="logProgressButton" mnemonicParsing="false" onAction="#handleBackToDashboard" styleClass="log-progress-button" text="Back to Dashboard" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="logProgressButton1" disable="true" mnemonicParsing="false" styleClass="log-progress-button" text="+ Log Progress" />
            </HBox>
        </VBox>
    </children>
</StackPane>
