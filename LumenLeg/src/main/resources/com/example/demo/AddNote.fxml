<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root" stylesheets="@Global.css, @AddNote.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.AdminCont.AddNoteController">
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header">
            <children>
                <Label styleClass="logo-text" text="LumenLeg" />
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0" styleClass="page-container">
            <children>
                <Label styleClass="page-title" text="Add Therapist Notes" />
                <Label styleClass="page-subtitle" text="Document the session details, pain level, and observations." />
                <VBox maxWidth="600.0" spacing="20.0" styleClass="form-container">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="form-label" text="Patient Name" />
                                <ComboBox fx:id="patientNameComboBox" prefWidth="Infinity" promptText="Select Patient" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="form-label" text="Date of Session" />
                                <DatePicker fx:id="sessionDatePicker" prefWidth="Infinity" promptText="Select Date" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="form-label" text="Pain Level" />
                                <ComboBox fx:id="painLevelComboBox" prefWidth="Infinity" promptText="Select Pain Level" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="form-label" text="Session Observations" />
                                <TextArea fx:id="observationsTextArea" prefHeight="200.0" wrapText="true" />
                            </children>
                        </VBox>
                        <HBox alignment="CENTER_RIGHT" spacing="20.0">
                            <children>
                                <Hyperlink onAction="#handleCancel" text="Cancel" />
                                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveNote" styleClass="save-button" text="Save Note" />
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
